#include "libft.h"

char		*ft_strjoin(char const *s1, char const *s2)
{
	int			len;
	char		str;

	if (s1 && s2)
	{
		len = ft_strlen(s1) + ft_strlen(s2);
		str = (char *) malloc(sizeof(char) * (len + 1));
		if (str)
		{
			ft_strcpy(str, s1);
			ft_strcpy(str, s2);
		}
	}
	return (str);
}
